# WebSocket Gateway Environment Configuration

# Service Configuration
NODE_ENV=development
PORT=4001
SERVICE_NAME=websocket-gateway

# Global API Prefix
GLOBAL_PREFIX=api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true
GRAPHQL_DEBUG=true

# Redis Configuration (for PubSub)
REDIS_HOST=redis-node-1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Service URLs (for future integration)
USER_SERVICE_URL=http://user-service:4003
CHAT_SERVICE_URL=http://chat-service:4004
AUTH_SERVICE_URL=http://auth-service:4002

# Logging Configuration
LOG_LEVEL=debug

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Subscription Configuration
SUBSCRIPTION_MAX_DEPTH=10
SUBSCRIPTION_MAX_COMPLEXITY=1000
