# Next.js Environment Configuration
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=Chat Application
NEXT_PUBLIC_APP_VERSION=1.0.0

# Backend Service URLs
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql
NEXT_PUBLIC_WEBSOCKET_ENDPOINT=ws://localhost:4001
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:4002
NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:4003
NEXT_PUBLIC_CHAT_SERVICE_URL=http://localhost:4004
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL=http://localhost:4005

# Internal Docker Network URLs (for SSR)
GRAPHQL_ENDPOINT=http://api-gateway:4000/graphql
WEBSOCKET_ENDPOINT=ws://websocket-gateway:4001
AUTH_SERVICE_URL=http://auth-service:4002
USER_SERVICE_URL=http://user-service:4003
CHAT_SERVICE_URL=http://chat-service:4004
NOTIFICATION_SERVICE_URL=http://notification-service:4005

# Authentication Configuration
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:5100

# Security Configuration
NEXT_PUBLIC_CSRF_TOKEN_HEADER=X-CSRF-Token
NEXT_PUBLIC_API_PREFIX=/api

# Development Configuration
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Performance Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_I18N=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10

# Apollo Client Configuration
NEXT_PUBLIC_APOLLO_CACHE_SIZE=50
NEXT_PUBLIC_APOLLO_ENABLE_DEV_TOOLS=true
