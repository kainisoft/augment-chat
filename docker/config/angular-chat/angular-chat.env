# Angular Environment Configuration
NODE_ENV=development

# Angular Configuration
NG_APP_ENV=development
NG_APP_NAME=Chat Application
NG_APP_VERSION=1.0.0

# Backend Service URLs (Public - for browser)
NG_GRAPHQL_ENDPOINT=http://localhost:4000/graphql
NG_WEBSOCKET_ENDPOINT=ws://localhost:4001
NG_AUTH_SERVICE_URL=http://localhost:4002
NG_USER_SERVICE_URL=http://localhost:4003
NG_CHAT_SERVICE_URL=http://localhost:4004
NG_NOTIFICATION_SERVICE_URL=http://localhost:4005

# Internal Docker Network URLs (for SSR if needed)
GRAPHQL_ENDPOINT=http://api-gateway:4000/graphql
WEBSOCKET_ENDPOINT=ws://websocket-gateway:4001
AUTH_SERVICE_URL=http://auth-service:4002
USER_SERVICE_URL=http://user-service:4003
CHAT_SERVICE_URL=http://chat-service:4004
NOTIFICATION_SERVICE_URL=http://notification-service:4005

# Authentication Configuration
NG_JWT_SECRET=your-jwt-secret-key
NG_AUTH_SECRET=your-auth-secret-key
NG_AUTH_URL=http://localhost:5200

# Security Configuration
NG_CSRF_TOKEN_HEADER=X-CSRF-Token
NG_API_PREFIX=/api

# Development Configuration
NG_DEBUG=true
NG_LOG_LEVEL=debug

# Performance Configuration
NG_ENABLE_ANALYTICS=false
NG_ENABLE_SENTRY=false

# Feature Flags
NG_ENABLE_PWA=true
NG_ENABLE_I18N=true
NG_ENABLE_DARK_MODE=true

# File Upload Configuration
NG_MAX_FILE_SIZE=10485760
NG_ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# WebSocket Configuration
NG_WS_RECONNECT_INTERVAL=5000
NG_WS_MAX_RECONNECT_ATTEMPTS=10

# Apollo Client Configuration
NG_APOLLO_CACHE_SIZE=50
NG_APOLLO_ENABLE_DEV_TOOLS=true

# Angular CLI Configuration
NG_CLI_ANALYTICS=false
NG_DISABLE_VERSION_CHECK=true

# Development Server Configuration
NG_SERVE_HOST=0.0.0.0
NG_SERVE_PORT=5200
NG_SERVE_POLL=2000
NG_LIVE_RELOAD=true
NG_HOT_MODULE_REPLACEMENT=true
