# Apollo Federation Gateway Environment Configuration
# Phase 2, Step 1: Basic configuration for Apollo Federation Gateway

# API Gateway Configuration
API_GATEWAY_PORT=4000
NODE_ENV=development

# Service URLs for Federation (will be used in Phase 2, Step 2)
USER_SERVICE_GRAPHQL_URL=http://localhost:4002/graphql
CHAT_SERVICE_GRAPHQL_URL=http://localhost:4003/graphql

# GraphQL Configuration
GRAPHQL_DEBUG=true
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4000,http://localhost:4001

# Logging Configuration
LOG_LEVEL=debug
LOG_CONSOLE=true

# Kafka Configuration (for logging)
KAFKA_BROKERS=localhost:9092
KAFKA_LOGS_TOPIC=logs

# Host Configuration
HOST=0.0.0.0

# JWT Configuration (for future authentication integration)
JWT_SECRET=your-jwt-secret-key-for-api-gateway
JWT_EXPIRES_IN=15m
