# Logging Service Configuration

# Service Configuration
NODE_ENV=development
PORT=4005
HOST=0.0.0.0
APP_VERSION=1.0.0

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_LOGS_TOPIC=logs
KAFKA_CLIENT_ID=logging-service
KAFKA_GROUP_ID=logging-service-group
KAFKA_CONSUMER_GROUP=logging-service
KAFKA_MAX_BYTES=1048576

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_KAFKA_ENABLED=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Loki Configuration
LOKI_URL=http://loki:3100
LOKI_BATCH_SIZE=100
LOKI_BATCH_WAIT_MS=1000

# Log Retention Configuration
LOG_RETENTION_DAYS=90

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000,http://localhost:4000,http://localhost:4001
CORS_CREDENTIALS=true

# Security Configuration
API_KEY_ENABLED=false
API_KEY=change-me-in-production
JWT_SECRET=change-me-in-production-this-is-32-chars-long
JWT_EXPIRES_IN=15m

# Performance Configuration
QUERY_COMPLEXITY_LIMIT=500
QUERY_DEPTH_LIMIT=8

# Rate Limiting Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
