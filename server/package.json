{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:hmr": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --watch --debug",
    "start:prod": "node dist/apps/server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/server/test/jest-e2e.json",
    "graphql:generate": "graphql-codegen --config apps/user-service/codegen.yml",
    "graphql:watch": "graphql-codegen --config apps/user-service/codegen.yml --watch",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create",
    "migration:up": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run",
    "migration:down": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert",
    "migration:status": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:show",
    "seed:run": "ts-node -r tsconfig-paths/register ./libs/database/src/seeds/seed.ts",
    "seed:clear": "ts-node -r tsconfig-paths/register ./libs/database/src/seeds/clear.ts",
    "db:create-database:auth": "SERVICE=auth ts-node -r tsconfig-paths/register ./libs/database/src/migrations/create-database.ts",
    "db:create-database:user": "SERVICE=user ts-node -r tsconfig-paths/register ./libs/database/src/migrations/create-database.ts",
    "db:create-databases": "pnpm db:create-database:auth && pnpm db:create-database:user",
    "db:create-schema:auth": "SERVICE=auth ts-node -r tsconfig-paths/register ./libs/database/src/migrations/create-schema.ts",
    "db:create-schema:user": "SERVICE=user ts-node -r tsconfig-paths/register ./libs/database/src/migrations/create-schema.ts",
    "db:create-schemas": "pnpm db:create-schema:auth && pnpm db:create-schema:user",
    "db:generate:auth": "SERVICE=auth drizzle-kit generate",
    "db:generate:user": "SERVICE=user drizzle-kit generate",
    "db:generate": "pnpm db:generate:auth && pnpm db:generate:user",
    "db:migrate:auth": "SERVICE=auth ts-node -r tsconfig-paths/register ./libs/database/src/migrations/migrate.ts",
    "db:migrate:user": "SERVICE=user ts-node -r tsconfig-paths/register ./libs/database/src/migrations/migrate.ts",
    "db:migrate": "pnpm db:migrate:auth && pnpm db:migrate:user",
    "db:push:auth": "SERVICE=auth drizzle-kit push",
    "db:push:user": "SERVICE=user drizzle-kit push",
    "db:push": "pnpm db:push:auth && pnpm db:push:user",
    "db:drop:auth": "SERVICE=auth drizzle-kit drop",
    "db:drop:user": "SERVICE=user drizzle-kit drop",
    "db:drop": "pnpm db:drop:auth && pnpm db:drop:user",
    "db:check:auth": "SERVICE=auth drizzle-kit check",
    "db:check:user": "SERVICE=user drizzle-kit check",
    "db:check": "pnpm db:check:auth && pnpm db:check:user",
    "db:up": "pnpm db:create-databases && pnpm db:create-schemas && pnpm db:migrate",
    "db:studio": "SERVICE=auth drizzle-kit studio",
    "db:studio:auth": "SERVICE=auth drizzle-kit studio",
    "db:studio:user": "SERVICE=user drizzle-kit studio"
  },
  "dependencies": {
    "@apollo/server": "4.12.1",
    "@as-integrations/fastify": "2.1.1",
    "@nestjs/apollo": "13.1.0",
    "@nestjs/common": "11.0.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.1",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/graphql": "13.1.0",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/microservices": "11.1.1",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-fastify": "11.1.0",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "11.0.0",
    "bcryptjs": "3.0.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.5.0",
    "drizzle-orm": "0.43.1",
    "fastify": "5.3.2",
    "graphql": "16.11.0",
    "graphql-subscriptions": "3.0.0",
    "graphql-tools": "9.0.18",
    "ioredis": "5.6.1",
    "kafkajs": "2.2.4",
    "passport": "0.7.0",
    "passport-headerapikey": "1.2.2",
    "passport-jwt": "4.0.1",
    "pg": "8.15.6",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "ts-morph": "25.0.1",
    "uuid": "11.1.0",
    "winston": "3.17.0",
    "winston-transport": "4.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@graphql-codegen/cli": "5.0.6",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-apollo-angular": "4.0.0",
    "@graphql-codegen/typescript-operations": "4.6.1",
    "@graphql-codegen/typescript-resolvers": "4.5.1",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.1.0",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.10.7",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.7",
    "@types/passport-jwt": "4.0.1",
    "@types/pg": "8.15.0",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "drizzle-kit": "0.31.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.2",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "run-script-webpack-plugin": "0.2.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0",
    "webpack": "5.90.3",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/domain(|/.*)$": "<rootDir>/libs/domain/src/$1",
      "^@app/events(|/.*)$": "<rootDir>/libs/events/src/$1",
      "^@app/iam(|/.*)$": "<rootDir>/libs/iam/src/$1",
      "^@app/kafka(|/.*)$": "<rootDir>/libs/kafka/src/$1",
      "^@app/logging(|/.*)$": "<rootDir>/libs/logging/src/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@app/graphql(|/.*)$": "<rootDir>/libs/graphql/src/$1",
      "^@app/validation(|/.*)$": "<rootDir>/libs/validation/src/$1",
      "^@app/security(|/.*)$": "<rootDir>/libs/security/src/$1",
      "^@app/dtos(|/.*)$": "<rootDir>/libs/dtos/src/$1"
    }
  }
}